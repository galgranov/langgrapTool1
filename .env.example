# Datadog Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATADOG API KEYS (Required)
# =============================================================================
# Get your API keys from: https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=your_datadog_api_key_here
DD_APP_KEY=your_datadog_app_key_here

# =============================================================================
# DATADOG SITE (Required)
# =============================================================================
# Choose your Datadog site based on your account region:
# - datadoghq.com (US1)
# - us3.datadoghq.com (US3)
# - us5.datadoghq.com (US5)
# - datadoghq.eu (EU1)
# - ap1.datadoghq.com (AP1)
DD_SITE=datadoghq.com

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
DD_SERVICE=lang-agents
DD_ENV=development
DD_VERSION=0.1.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable Datadog features
DD_TRACE_ENABLED=true
DD_METRICS_ENABLED=true
DD_LOGGING_ENABLED=true

# =============================================================================
# TRACING CONFIGURATION
# =============================================================================
# Sample rate: 1.0 = 100% of traces, 0.5 = 50% of traces
DD_TRACE_SAMPLE_RATE=1.0

# Enable debug mode for troubleshooting (verbose output)
DD_TRACE_DEBUG=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
DD_LOG_LEVEL=INFO

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the .env file with real keys to version control
# 2. Add .env to your .gitignore file
# 3. For production, use environment variables or a secrets manager
# 4. You can disable features individually without removing the integration
# 5. Lower sample rates reduce costs but may miss some traces
